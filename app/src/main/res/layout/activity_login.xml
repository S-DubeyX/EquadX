<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:background="@drawable/green_gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_recycle"
            app:tint="#FFFFFF"/>

        <TextView
            android:layout_marginTop="12dp"
            android:text="EquadX"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:text="Login to Dashboard"
            android:textColor="#E8FFF3"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <!-- Login Card -->
    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/card_bg"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="22dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Role Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/role_bg"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/studentTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/role_selected"
                android:gravity="center"
                android:text="Student"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/adminTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Admin"
                android:textColor="#777777"/>
        </LinearLayout>

        <!-- Email -->
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/input_bg"
            android:hint="Email or ID"
            android:padding="14dp"
            android:textSize="14sp"/>

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/input_bg"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textSize="14sp"/>

        <!-- Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keep me signed in"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot?"
                android:textColor="#2ECC71"/>
        </LinearLayout>


        <!-- Login Button -->
        <Button
            android:id="@+id/loginBtn"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Login Securely"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2ECC71"
            android:textColor="#FFFFFF"/>

        <!-- Create Account -->
        <TextView
            android:id="@+id/createAccount"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="New User?  Create Account"
            android:textColor="#2ECC71"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
